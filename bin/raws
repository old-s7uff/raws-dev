#cd ~/
#wget https://raw.githubusercontent.com/systemroot/all/master/ibrew.sh
#clear
#chmod +x ibrew.sh
#dos2unix ibrew.sh
#./ibrew.sh
#fi

#if [[ "$@" == 'compile aioncube' ]]; then
#cd ~/
#wget https://raw.githubusercontent.com/systemroot/all/master/cion.sh
#clear
#chmod +x cion.sh
#dos2unix cion.sh
#./cion.sh
#fi
