#!/bin/bash
# Author RAW A.K.A Jasht'sSerie.
# This is an open source project, and you can contribute anytime.
if [[ "$1" == '-v' ]]; then
   ~/.raws/.rversion
fi

if [[ "$1" == 'sysinfo' ]]; then
   ~/.raws/.sysinfo
fi

if [[ "$@" == 'install apache' ]]; then
cd ~/
wget https://raw.githubusercontent.com/systemroot/all/master/iapache.sh
clear
chmod +x ~/iapache.sh
dos2unix iapache.sh
./iapache.sh
fi

if [[ "$@" == 'acreate' ]]; then
cd ~/
wget https://raw.githubusercontent.com/systemroot/all/master/acreate.sh
clear
chmod +x ~/acreate.sh
dos2unix ~/acreate.sh
echo "Please Write Domain Name: "
read domain
echo "`~/./acreate.sh $domain`"
fi

if [[ "$@" == 'install raw-os' ]]; then
cd ~/
wget https://raw.githubusercontent.com/systemroot/all/master/raw-os.sh
clear
chmod +x raw-os.sh
dos2unix raw-os.sh
./raw-os.sh
rm -Rf ~/raw-os.sh
fi

if [[ "$1" == 'inode' ]]; then
cd ~/
wget https://raw.githubusercontent.com/systemroot/all/master/inode.sh
clear
chmod +x inode.sh
dos2unix inode.sh
./inode.sh
rm -Rf ~/inode.sh
fi

if [[ "$1" == 'help' ]]; then
cd ~/
mkdir ~/rp
cd ~/rp
wget https://raw.githubusercontent.com/systemroot/all/master/help
chmod +x ~/rp/help
dos2unix help
./help
rm -Rf ~/rp
fi

if [[ "$1" == 'update' ]]; then
cd ~/
wget https://raw.githubusercontent.com/systemroot/all/master/update.sh
clear
chmod +x update.sh
dos2unix update.sh
./update.sh
fi

if [[ "$@" == 'install Ogar-unlimited' ]]; then
cd ~/
wget https://raw.githubusercontent.com/systemroot/all/master/iogar.sh
clear
chmod +x iogar.sh
dos2unix iogar.sh
./iogar.sh
fi

if [[ "$@" == 'install ytdl' ]]; then
cd ~/
wget https://raw.githubusercontent.com/systemroot/all/master/ytdl.sh 
clear
chmod +x ytdl.sh
dos2unix ytdl.sh
./ytdl.sh 
fi

if [ "$1" == "m" ] && [ "$2" ];
then
cd ~/
wget https://raw.githubusercontent.com/systemroot/all/master/ddos/monitor.sh
chmod +x ~/monitor.sh
~/./monitor.sh $2
fi

if [ "$1" == "mp3" ] && [ "$2" ];
then
youtube-dl --extract-audio --audio-format mp3 $2
elif [ "$1" == "mp4" ] && [ "$2" ];
then
youtube-dl $2
fi



#To Do.
