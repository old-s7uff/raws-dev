#!/bin/bash

if [ "$1" == 'ndel' ] && [ "$2" ]; then
   rm -Rf /hostdata/$2
   rm -Rf /nginx/sites/$2
   service nginx reload
   
   clear
   echo -e "||=======================================================||" | lolcat -a -s 100;
   echo -e "||=======================================================||" | lolcat -a -s 100;
   echo -e "||======|| R.I.P =>| $2                                   " | lolcat -a -s 100;
   echo -e "||=======================================================||" | lolcat -a -s 100;
   echo -e "||=======================================================||" | lolcat -a -s 100;
fi
